---
const testimonials = Array.from({ length: 3 });
const stars = Array.from({ length: 5 });
---

<section id="testimonials" class="w-full py-12 md:py-24 lg:py-32">
  <div class="container px-4 md:px-6 mx-auto text-center">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-8"
    >
      Client Testimonials
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        testimonials.map(() => (
          <div class="p-6 border rounded-lg">
            <div class="flex justify-center mb-4">
              {stars.map(() => (
                <img src="/star.png" alt="Star Testimonial" class="w-5 h-5 fill-current text-yellow-500" />
              ))}
            </div>
            <p class="text-gray-500 dark:text-gray-400 mb-4">
              "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean
              gravida justo eu ligula tincidunt, at faucibus metus malesuada."
            </p>
            <p class="font-semibold">- Client Name, Company</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
