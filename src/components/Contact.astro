---
import { Button } from './ui/button';
import { Input } from './ui/input';
import { Textarea } from './ui/textarea';
---

<section
  class="w-full py-12 md:py-24 lg:py-32 bg-gray-100 dark:bg-gray-800"
  id="contact"
>
  <div class="container px-4 md:px-6 mx-auto">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-8 text-center"
    >
      Get in Touch
    </h2>
    <div class="grid gap-6 lg:grid-cols-2 items-start">
      <div class="space-y-4">
        <p class="text-gray-500 dark:text-gray-400 text-center lg:text-left">
          Ready to elevate your brand? Let's collaborate and create something
          extraordinary together.
        </p>
        <div
          class="flex justify-center items-center lg:justify-start space-x-6"
        >
          <a
            href="#"
            class="text-gray-500 hover:text-gray-600 dark:text-gray-400"
          >
            <img
              src="/instagram.png"
              alt="instagram logo"
              class="w-6 h-6"
            />
            <span class="sr-only">Instagram</span>
          </a>
          <a
            href="#"
            class="text-gray-500 hover:text-gray-600 dark:text-gray-400"
          >
            <img src="/x.png" alt="x logo" />
            <span class="sr-only">Twitter</span>
          </a>
          <a
            href="#"
            class="text-gray-500 hover:text-gray-600 dark:text-gray-400"
          >
            <img src="/linkedin.png" alt="linkedin logo" />
            <span class="sr-only">Linkedin</span>
          </a>
        </div>
      </div>
      <div class="space-y-4">
        <Input placeholder="Your Name" />
        <Input placeholder="Your Email" type="email" />
        <Input placeholder="Subject" />
        <Textarea placeholder="Your Message" />
        <Button className="w-full">Send Message</Button>
      </div>
    </div>
  </div>
</section>
