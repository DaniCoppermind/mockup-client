---
const imagesQuantity = Array.from({ length: 4 });
---

<section
  class="w-full py-12 md:py-24 lg:py-32 bg-gray-100 dark:bg-gray-800"
  id="portfolio"
>
  <div class="container px-4 md:px-6 mx-auto text-center">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-8"
    >
      Our Portfolio
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        imagesQuantity.map((_, i) => (
          <div class="rounded-lg overflow-hidden">
            <span class="w-full h-48 bg-gray-200 flex items-center justify-center">
              Image {i + 1}
            </span>
            <div class="p-4 bg-white dark:bg-gray-900">
              <h3 class="font-semibold mb-2">Project Title</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Brief project description goes here.
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
